{
  "manifest_version": 3,
  "name": "FreoBus Wallet",
  "version": "0.1.0",
  "description": "A secure and seamless Web3 wallet for the FreoBus ecosystem",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/temp-icon16.png",
      "48": "icons/temp-icon48.png",
      "128": "icons/temp-icon128.png"
    }
  },
  "icons": {
    "16": "icons/temp-icon16.png",
    "48": "icons/temp-icon48.png",
    "128": "icons/temp-icon128.png"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["src/content/index.ts"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/content/provider.ts"],
      "matches": ["https://*/*"]
    }
  ]
} 